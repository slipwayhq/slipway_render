{
  "publisher": "slipway",
  "name": "echarts",
  "description": "Takes an echart definition and returns a canvas.",
  "version": "0.0.1",
  "input": {
    "properties": {
      "width": { "type": "uint32" },
      "height": { "type": "uint32" },
      "chart": {}
    },
    "optionalProperties": {
      "theme": {}
    }
  },
  "output": {
    "properties": {
      "canvas": {
        "properties": {
          "width": {
            "type": "uint32"
          },
          "height": {
            "type": "uint32"
          },
          "data": {
            "type": "string",
            "metadata": {
              "description": "Base64 encoded vector of RGBA unsigned bytes."
            }
          }
        }
      }
    }
  },
  "rigging": {
    "echarts": {
      "component": "slipway.echarts_svg.0.0.1",
      "input": {
        "width": "$$.input.width",
        "height": "$$.input.height",
        "chart": "$$.input.chart",
        "theme": "$$?input.theme"
      }
    },
    "output": {
      "component": "slipway.svg.0.0.1",
      "input": {
        "width": "$$.input.width",
        "height": "$$.input.height",
        "svg": "$$.echarts.svg"
      }
    }
  }
}